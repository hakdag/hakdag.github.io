---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="p-8 bg-gray-800/50 backdrop-blur-sm rounded-xl border border-purple/20 hover:border-purple/40 transition-all">
  <div class="text-4xl mb-6 bg-gradient-to-br from-purple to-accent w-16 h-16 flex items-center justify-center rounded-lg text-white" set:html={icon} />
  <h3 class="text-xl font-semibold mb-3 text-white">{title}</h3>
  <p class="text-gray-400 leading-relaxed">{description}</p>
</div>